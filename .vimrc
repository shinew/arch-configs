syntax on

set autoindent
set backspace=indent,eol,start
set cursorline
set expandtab
set hlsearch
set ignorecase
set incsearch
set nojoinspaces
set number
set shiftround
set shiftwidth=2
set showmatch
set smartcase
set smarttab
set softtabstop=2
set tabstop=2
set whichwrap+=<,>,h,l,[,]
set wrap

" Create a new tab
nmap tn :tabnew<CR>
